<MudCard>
    <MudCardMedia Image=@Imagem Height="200" />
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Artista!.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Artista!.Bio</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning" Variant="Variant.Outlined" Href=@($"/EditarArtista/{Artista?.Nome}")>Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public ArtistaResponse? Artista { get; set; }
    public string? Imagem { get; set; }

    protected override void OnInitialized()
    {
        Imagem = "images/cardArtista.png";
        if (Artista != null
        && Artista.FotoPerfil != null
        && Artista.FotoPerfil.Length > 0
        )
        {
            if (Artista.FotoPerfil.Contains("FotosPerfil"))
            {
                Imagem = $"http://localhost:5160/{Artista.FotoPerfil}";
            }
            else
            {
                Imagem = Artista.FotoPerfil;
            }
        }
    }
}